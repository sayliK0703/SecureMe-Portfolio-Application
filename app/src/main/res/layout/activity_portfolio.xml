<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".portfolio">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/excellence" />

    <TextView
        android:id="@+id/textUserView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_margin="15dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Heyy, Sayli Katte" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Welcome to your Portfolio" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLinkedin"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="25dp"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="10dp"
        android:layout_margin="4dp"
        app:cardPreventCornerOverlap="false"
        >
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            app:srcCompat="@drawable/linkedin" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="LinkedIn"
            />
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardGFG"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="25dp"
            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            android:layout_margin="4dp"
            app:cardPreventCornerOverlap="false"
            >
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                app:srcCompat="@drawable/gfglogo" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="GFG"
               />

        </androidx.cardview.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardGithub"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            android:layout_margin="4dp"
            app:cardPreventCornerOverlap="false"
            >
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                app:srcCompat="@drawable/github" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="GitHub"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLeetCode"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            android:layout_margin="4dp"
            app:cardPreventCornerOverlap="false"
            >
            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                app:srcCompat="@drawable/leetcode" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="LeetCode"
                />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>